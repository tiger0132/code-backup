<script>
                    $(".tasklist-edit").children("button").click(function() {
                        var pid = $(this).attr('data-pid');
                        $.post("/api/user/tasklistRemove", {
                            pid: pid
                        });
                        $("div.tasklist-item[data-pid="+pid+"]").hide();
                    });
                </script>
