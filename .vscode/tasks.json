{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "command": "./compile.sh",
            "args": [
                {
                    "value": "${fileDirname}/${fileBasenameNoExtension}",
                    "quoting": "escape"
                },
                "${fileExtname}",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}